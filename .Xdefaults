! -------------------------------------------------------------------
! urxvt settings
! -------------------------------------------------------------------
urxvt.saveLines:        32767
urxvt.loginShell:     true
urxvt*cutchars:       "()*,<>[]{}|'"
urxvt*visualBell:       true
urxvt*scrollBar:      false
urxvt*urgentOnBell:     true
urxvt*termName:       rxvt-256color
urxvt*internalBorder:       5
!URxvt*font: xft:Droid Sans Mono Slashed:pixelsize=9
!URxvt*boldFont: xft:Pragmatatt:pixelsize=8.5
!URxvt*font: xft:inconsolata:hintstyle=hintslight:autohint=false:pixelsize=10
urxvt*font: xft:CosmicSansNeueMono:pixelsize=11
!urxvt*font: xft:Pragmatatt:pixelsize=9.5
!Urxvt.boldFont: neep-alt-bold-10
urxvt.geometry:       90x25
urxvt.cursorColor:    #ffffff

URxvt.colorBD: #e8e8d3
URxvt.colorIT: #b5bd68
URxvt.colorUL: #81a2be

! -------------------------------------------------------------------
! xterm
! -------------------------------------------------------------------

xterm*faceName:          Profont
xterm*faceSize:          9
xterm*geometry:          100x25
xterm*boldMode:          false
xterm*termName:          xterm-256color
xterm*cutNewline:        false
xterm*internalBorder:    10
xterm*highlightColor:    #444
xterm*background:        #1a1a1a
xterm*foreground:        #fff
xterm*metaSendsEscape:   true
xterm*altSendsEscape:    true
xterm*colorBD:           #ffffff
xterm*colorBDMode:       false
xterm*cursorBlink:       false
xterm*pointerColor:      false
xterm*cursorColor:       #ff9900
xterm*veryBoldColors:    14
xterm*loginShell:        true
xterm*jumpScroll:        true
xterm*multiScroll:       true
xterm*saveLines:         512

